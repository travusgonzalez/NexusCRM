@model NexusCRM.Models.Companies
@{
    ViewBag.Title = "Nexus CRM > Companies > Add Company";
}

@section Styles {
    <link href="~/Content/css/errors.css" rel="stylesheet">
}

<div class="wrapper">
    <div class="container-fluid">

        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="btn-group pull-right">
                        <ol class="breadcrumb hide-phone p-0 m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Nexus CRM</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Companies")">Companies</a></li>
                            <li class="breadcrumb-item active">Add Company</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Add Company</h4>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- Main Content -->
        <div class="row">
            <div class="col-12">
                <div class="card m-b-20">
                    <div class="card-body">

                        <h4 class="mt-0 header-title">Company Information</h4>
                        <p class="text-muted m-b-30 font-14">Fill in information below</p>

                        @using (Html.BeginForm("Add", "Companies", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="row">
                                
                                <!-- 1st COL -->
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CompanyName)
                                        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CompanyName)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ContactType)
                                        @Html.TextBoxFor(model => model.ContactType, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ContactType)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Website)
                                        @Html.TextBoxFor(model => model.Website, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Website)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Phone)
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Phone)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.LinkedIn)
                                        @Html.TextBoxFor(model => model.LinkedIn, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.LinkedIn)
                                    </div>

                                </div>


                                <!-- 2nd COL -->
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Address)
                                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Address)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.City)
                                        @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.City)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.State)
                                        @Html.TextBoxFor(model => model.State, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.State)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Zip)
                                        @Html.TextBoxFor(model => model.Zip, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Zip)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Country)
                                        @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Country)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Notes)
                                        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Notes)
                                    </div>

                                </div>
                            </div>

                            <br />
                            <a href="@Url.Action("Index", "Companies")" class="btn btn-secondary waves-effect">Cancel</a>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Save Company</button>
                        }

                    </div>
                </div>

            </div>
        </div>

    </div> <!-- end container -->
</div>
<!-- end wrapper -->
