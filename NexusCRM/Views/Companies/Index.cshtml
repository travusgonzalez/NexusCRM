@model List<NexusCRM.Models.Companies>
@{
    ViewBag.Title = "Nexus CRM > Companies";
}

@section Styles {
    <link href="~/Content/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/Content/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet">
}

@section Scripts {
    <script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="~/Content/plugins/datatables/responsive.bootstrap4.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
    </script>
}

<div class="wrapper">
    <div class="container-fluid">

        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="btn-group pull-right">
                        <a href="@Url.Action("Add", "Companies")" class="btn btn-success"><i class="fa fa-building"></i> &nbsp; Add Company</a>
                    </div>
                    <h4 class="page-title">Companies</h4>
                </div>

            </div>
        </div>
        <!-- end page title end breadcrumb -->


        <div class="row">
            <div class="col-12">
                <!-- Main Content -->

                <div class="card m-b-20">
                    <div class="card-body">
                        <table id="datatable" class="table table-striped dt-responsive nowrap table-vertical" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Contact Type</th>
                                    <th>Phone Number</th>
                                    <th>Address</th>
                                    <th>Links</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in Model)
                                {
                                <tr>
                                    <td>@c.CompanyName</td>
                                    <td>@c.ContactType</td>
                                    <td>@c.Phone</td>
                                    <td>@c.Address, @c.City, @c.State @c.Zip </td>
                                    <td>
                                        @if (!c.Website.IsEmpty())
                                        { 
                                            <a href="https://@c.Website" target="_blank" class="text-muted" data-toggle="tooltip" data-placement="top" data-original-title="@c.Website"><i class="fa fa-globe font-18"></i></a>
                                        }
                                        @if (!c.LinkedIn.IsEmpty())
                                        {
                                            <a href="https://www.linkedin.com/company/@c.LinkedIn" target="_blank" class="text-muted" data-toggle="tooltip" data-placement="top" data-original-title="LinkedIn"><i class="fa fa-linkedin-square font-18"></i></a>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Companies", new { id = c.CompaniesID })" class="text-muted" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="fa fa-pencil-alt font-18"></i></a>
                                    </td>
                                </tr> 
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div> <!-- end container -->
</div>
<!-- end wrapper -->
