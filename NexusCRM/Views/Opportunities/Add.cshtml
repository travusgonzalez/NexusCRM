@model NexusCRM.Models.Opportunities
@{
    ViewBag.Title = "Nexus CRM > Opportunities > Add Opportunity";
}

@section Styles {
    <link href="~/Content/css/errors.css" rel="stylesheet">
}

<div class="wrapper">
    <div class="container-fluid">

        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="btn-group pull-right">
                        <ol class="breadcrumb hide-phone p-0 m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Nexus CRM</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Opportunities")">Opportunities</a></li>
                            <li class="breadcrumb-item active">Add Opportunity</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Add Opportunity</h4>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- Main Content -->
        <div class="row">
            <div class="col-12">
                <div class="card m-b-20">
                    <div class="card-body">

                        <h4 class="mt-0 header-title">Opportunity Information</h4>
                        <p class="text-muted m-b-30 font-14">Fill in information below</p>

                        @using (Html.BeginForm("Add", "Opportunities", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="row">

                                <!-- 1st COL -->
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CompaniesID)
                                        @Html.TextBoxFor(model => model.CompaniesID, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CompaniesID)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ShortDescription)
                                        @Html.TextBoxFor(model => model.ShortDescription, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ShortDescription)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Value)
                                        @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Value)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Source)
                                        @Html.TextBoxFor(model => model.Source, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Source)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CloseByDate)
                                        @Html.TextBoxFor(model => model.CloseByDate, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CloseByDate)
                                    </div>

                                </div>


                                <!-- 2nd COL -->
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Stage)
                                        @Html.TextBoxFor(model => model.Stage, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Stage)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Priority)
                                        @Html.TextBoxFor(model => model.Priority, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Priority)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.LossReason)
                                        @Html.TextBoxFor(model => model.LossReason, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.LossReason)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Notes)
                                        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Notes)
                                    </div>

                                </div>
                            </div>

                            <br />
                            <a href="@Url.Action("Index", "Opportunities")" class="btn btn-secondary waves-effect">Cancel</a>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Save Opportunity</button>

                        }

                    </div>
                </div>

            </div>
        </div>

    </div> <!-- end container -->
</div>
<!-- end wrapper -->
